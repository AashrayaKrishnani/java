<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ColorPicker?>

<GridPane fx:controller="com.aashrayakrishnani.javafx.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <!-- A really good implementation of a ColorPicker Control :D

         Note - The custom colors modified by the user in the ColorPicker are stored
         for entire life of the application :D -->

    <ColorPicker GridPane.rowIndex="0" GridPane.columnIndex="0" />

</GridPane>
